    <EmbeddedResource Include="..\Planetarium\**\*.resx" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="..\Planetarium\Views\*.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Page Include="..\Planetarium\Themes\*.xaml">
