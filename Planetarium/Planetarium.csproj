  <ItemGroup>
    <ApplicationDefinition Include="..\Planetarium\App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Planetarium\**\*.cs" Exclude="..\Planetarium\obj\**" />
