<Window x:Class="Planetarium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:Planetarium"
        mc:Ignorable="d"
        Style="{StaticResource {x:Type Window}}"
        MinHeight="300" MinWidth="300"
        v:MainWindow.FullScreen="{Binding FullScreen, Mode=OneWay}"
        v:MainWindow.MousePosition="{Binding SkyMousePosition, Mode=OneWayToSource}"
        v:MainWindow.MapKeyDown="{Binding MapKeyDownCommand}"
        v:MainWindow.MapDoubleClick="{Binding MapDoubleClickCommand}"
        v:MainWindow.MapRightClick="{Binding MapRightClickCommand}"
        v:MainWindow.MapZoom="{Binding MapZoomCommand}"
        Title="Planetarium" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" ToolBarTray.IsLocked="True">
            <ToggleButton Width="22" Height="22" VerticalAlignment="Bottom">
                <Canvas Width="16" Height="16">
                    <Path Width="16" Height="16" Stretch="Fill" Fill="White" Data="F1 M 38,23.5C 38.8643,23.5 39.7109,23.5756 40.5337,23.7206L 42.6275,18.5381L 48.1901,20.787L 46.0964,25.9692C 47.6473,27.0149 48.9851,28.3527 50.0308,29.9036L 55.213,27.8099L 57.4619,33.3725L 52.2794,35.4664C 52.4244,36.2891 52.5,37.1357 52.5,38C 52.5,38.8643 52.4244,39.7109 52.2794,40.5337L 57.4619,42.6275L 55.213,48.1901L 50.0308,46.0964C 49.0795,47.5073 47.8865,48.7418 46.5112,49.7405L 48.7844,54.8462L 43.3041,57.2891L 41.0307,52.1828C 40.0533,52.3906 39.0394,52.5 38,52.5C 37.1357,52.5 36.2891,52.4244 35.4664,52.2794L 33.3725,57.462L 27.8099,55.213L 29.9036,50.0309C 28.3527,48.9851 27.0149,47.6473 25.9691,46.0964L 20.787,48.1901L 18.538,42.6275L 23.7206,40.5336C 23.5756,39.7109 23.5,38.8643 23.5,38C 23.5,37.1357 23.5756,36.2891 23.7206,35.4664L 18.538,33.3725L 20.787,27.8099L 25.9691,29.9036C 26.9205,28.4927 28.1135,27.2582 29.4889,26.2594L 27.2157,21.1537L 32.6959,18.7109L 34.9694,23.8172C 35.9468,23.6094 36.9606,23.5 38,23.5 Z M 38,28C 32.4771,28 28,32.4772 28,38C 28,43.5229 32.4771,48 38,48C 43.5228,48 48,43.5229 48,38C 48,32.4772 43.5228,28 38,28 Z "/>
                </Canvas>
            </ToggleButton>
        </ToolBar>

        <DockPanel Grid.Row="1" LastChildFill="true">
            <WindowsFormsHost x:Name="Host" Background="Black">
                <WindowsFormsHost.ContextMenu>

                    <!--IsOpen="{Binding ContextMenuIsOpened}"-->

                    <ContextMenu ItemsSource="{Binding ContextMenuItems}" Opened="ContextMenu_Opened">
                        <ContextMenu.Resources>
                            <ControlTemplate x:Key="MenuSeparatorTemplate">
                                <Separator />
                            </ControlTemplate>
                        </ContextMenu.Resources>
                        <ContextMenu.ItemContainerStyle>
                            <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                                <Setter Property="IsChecked" Value="{Binding IsChecked}" />
                                <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                                <Setter Property="Header" Value="{Binding Header}" />
                                <Setter Property="Command" Value="{Binding Command}" />
                                <Setter Property="CommandParameter" Value="{Binding CommandParameter}" />
                                <Setter Property="ItemsSource" Value="{Binding SubItems}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="MinHeight" Value="0"/>
                                        <Setter Property="Height" Value="5"/>
                                        <Setter Property="Template" Value="{StaticResource MenuSeparatorTemplate}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContextMenu.ItemContainerStyle>
                    </ContextMenu>
                </WindowsFormsHost.ContextMenu>
            </WindowsFormsHost>
        </DockPanel>
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="lblConstellation" Width="30" TextAlignment="Center" Text="{Binding MapConstellationNameString}" />
            <Separator></Separator>
            <TextBlock x:Name="lblEquatorialCoordinates" Width="220" Text="{Binding MapEquatorialCoordinatesString}" />
            <Separator></Separator>
            <TextBlock x:Name="lblHorizontalCoordinates" Width="220" Text="{Binding MapHorizontalCoordinatesString}" />
            <Separator></Separator>
            <TextBlock x:Name="lblViewAngle" Text="{Binding MapViewAngleString}" />
        </StatusBar>

    </Grid>
</Window>
