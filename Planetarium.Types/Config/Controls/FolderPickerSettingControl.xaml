<UserControl x:Class="Planetarium.Types.Config.Controls.FolderPickerSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Planetarium.Types.Config.Controls"
             xmlns:controls="clr-namespace:Planetarium.Controls"             
             mc:Ignorable="d">

        <controls:FilePathPicker Mode="Directory" Caption="{Binding SettingName, FallbackValue='File Path'}" SelectedPath="{Binding SettingValue}" IsEnabled="{Binding IsEnabled}" />

</UserControl>
