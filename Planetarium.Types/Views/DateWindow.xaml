<Window x:Class="Planetarium.Views.DateWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:Planetarium.Controls"
        xmlns:t="clr-namespace:Planetarium.Types.Themes"
        xmlns:vm="clr-namespace:Planetarium.ViewModels"
        xmlns:loc="clr-namespace:Planetarium.Types.Localization"
        mc:Ignorable="d"
        Title="{loc:Text DateWindow.Title}" Height="234" Width="270.5"
        Style="{StaticResource {x:Type Window}}"
        ResizeMode="NoResize"
        SizeToContent="Height"
        t:WindowProperties.MinButtonVisible="Collapsed"
        t:WindowProperties.MaxButtonVisible="Collapsed"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="4" Orientation="Vertical">

        <!-- Date & Time Layout -->
        <Grid 
            Visibility="{Binding DisplayMode, Converter={t:VisibilityConverter}, ConverterParameter={x:Static vm:DateOptions.DateTime}, FallbackValue=Visible}">
                       
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="36" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="{loc:Text DateWindow.Day}" />
            <Label Grid.Column="1" Grid.Row="0" Content="{loc:Text DateWindow.Month}" />
            <Label Grid.Column="2" Grid.Row="0" Content="{loc:Text DateWindow.Year}" />

            <c:NumericUpDown Margin="3" Grid.Column="0" Grid.Row="1" Minimum="1" Maximum="{Binding DaysCount}" Value="{Binding Day, Converter={t:NumericConverter}}" DecimalPlaces="0" />
            <ComboBox Height="22" Margin="3" Grid.Column="1" Grid.Row="1" 
                  ItemsSource="{Binding ShortMonthsNames}"
                  SelectedIndex="{Binding SelectedMonth}" />
            <c:NumericUpDown Margin="3" Grid.Column="2" Grid.Row="1" Minimum="-9999" Maximum="9999" Value="{Binding Year}" DecimalPlaces="0" />

            <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Bottom" Content="{loc:Text DateWindow.Hours}" />
            <Label Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" Content="{loc:Text DateWindow.Minutes}" />
            <Label Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Content="{loc:Text DateWindow.Seconds}" />

            <c:NumericUpDown Margin="3" Grid.Column="0" Grid.Row="3" Maximum="23" Value="{Binding Hours, Converter={t:NumericConverter}}" DecimalPlaces="0" />
            <c:NumericUpDown Margin="3" Grid.Column="1" Grid.Row="3" Maximum="59" Value="{Binding Minutes, Converter={t:NumericConverter}}" DecimalPlaces="0" />
            <c:NumericUpDown Margin="3" Grid.Column="2" Grid.Row="3" Maximum="59" Value="{Binding Seconds, Converter={t:NumericConverter}}" DecimalPlaces="0" />
        </Grid>

        <!-- Date Only Layout -->
        <Grid 
            Visibility="{Binding DisplayMode, Converter={t:VisibilityConverter}, ConverterParameter={x:Static vm:DateOptions.DateOnly}, FallbackValue=Collapsed}">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0">Day</Label>
            <Label Grid.Column="1" Grid.Row="0">Month</Label>
            <Label Grid.Column="2" Grid.Row="0">Year</Label>

            <c:NumericUpDown Margin="3" Grid.Column="0" Grid.Row="1" Minimum="1" Maximum="{Binding DaysCount}" Value="{Binding Day, Converter={t:NumericConverter}}" />
            <ComboBox Height="22" Margin="3" Grid.Column="1" Grid.Row="1" 
                  ItemsSource="{Binding ShortMonthsNames}"
                  SelectedIndex="{Binding SelectedMonth}" />
            <c:NumericUpDown Margin="3" Grid.Column="2" Grid.Row="1" Minimum="-9999" Maximum="9999" Value="{Binding Year, Converter={t:NumericConverter}}" />

        </Grid>

        <!-- Month & Year Layout -->
        <Grid 
            Visibility="{Binding DisplayMode, Converter={t:VisibilityConverter}, ConverterParameter={x:Static vm:DateOptions.MonthYear}, FallbackValue=Collapsed}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0">Month</Label>
            <Label Grid.Column="1" Grid.Row="0">Year</Label>

            <ComboBox Height="22" Margin="3" Grid.Column="0" Grid.Row="1" 
                  ItemsSource="{Binding FullMonthsNames}"
                  SelectedIndex="{Binding SelectedMonth}" />
            <c:NumericUpDown Margin="3" Grid.Column="1" Grid.Row="1" Minimum="-9999" Maximum="9999" Value="{Binding Year, Converter={t:NumericConverter}}" DecimalPlaces="0" />

        </Grid>
        
        <StackPanel Margin="2 10 2 2" Orientation="Vertical">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                    Padding="0"
                    VerticalAlignment="Center">
                    <Hyperlink Command="{Binding SetCurrentDateCommand}">
                        <Run Text="{loc:Text DateWindow.SetCurrent}" />
                    </Hyperlink>
                </Label>

                <Button 
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    MinWidth="80"  
                    Height="22" 
                    VerticalAlignment="Center" 
                    Command="{Binding SelectDateCommand}"
                    Content="{loc:Text DateWindow.Select}">
                </Button>
            </Grid>

        </StackPanel>
    </StackPanel>
</Window>
